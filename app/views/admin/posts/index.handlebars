 <!-- Page Headings Start -->
            <div class="row justify-content-between align-items-center mb-10">

                <!-- Page Heading Start -->
                <div class="col-12 col-lg-auto mb-20">
                    <div class="page-heading">
                        <h3 class="title">مطالب <span>/ همه مطالب</span></h3>
                    </div>
                </div>
                <!-- Page Heading End -->

            </div>
            <!-- Page Headings End -->
            <div class="col-md-12 mb-30">
                <div class="box">
                    <div class="box-head">
                        <h4 class="title">
                            <a class="button button-icon-right button-primary text-light" href="./posts/create">
                                <span><i class="zmdi zmdi-file-plus"></i>مطلب جدید</span>
                            </a>
                        </h4>
                    </div>
                    <div class="box-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover vertical-middle">
                                <thead>
                                    <tr>
                                        <th>شناسه مطلب</th>
                                        <th>عنوان مطلب</th>
                                        <th>نویسنده</th>
                                        <th>تاریخ انتشار</th>
                                        <th>بازدید</th>
                                        <th>عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                   {{#each posts}}
                                    <tr>
                                        <td>{{this.ID}}</td>
                                        <td><a href="#">{{this.title}}</a></td>
                                        <td>{{this.full_name}}</td>
                                        <td>{{this.created_at_persian}}</td>
                                        <td><span class="badge badge-danger">{{this.views}}</span></td>
                                        <td>
                                            <div class="table-action-buttons">
                                                <a class="edit button button-box button-xs button-info" href="#"><i class="zmdi zmdi-edit"></i></a>
                                                <a class="delete button button-box button-xs button-danger" href="#"><i class="zmdi zmdi-delete"></i></a>
                                            </div>
                                        </td>
                                    </tr>
                                   {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>