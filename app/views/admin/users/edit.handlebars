            <div class="row justify-content-between align-items-center mb-10">

                <!-- Page Heading Start -->
                <div class="col-12 col-lg-auto mb-20">
                    <div class="page-heading">
                        <h3 class="title">مطالب <span>/ ویرایش مطلب</span></h3>
                    </div>
                </div>
                <!-- Page Heading End -->
            </div>
                        <div class="col-12 mb-30">
                <div class="box">
                    <div class="box-body">
                        {{#if errors}}
                    <div class="errors mb-30">
                        {{#each errors}}
                        <div class="alert alert-danger" role="alert">
                                <strong>{{this}}</strong>
                                <button class="close" data-dismiss="alert"><i class="zmdi zmdi-close"></i></button>
                            </div>
                        {{/each}}
                    </div>
                    {{/if}}
                        <form action="/admin/users/update/{{userData.ID}}" method="post" class="form-horizontal w-100">
                            <div class="col-12 mb-30">
                                <label for="full_name">نام کاربر</label>
                                <input id="full_name" name="full_name" type="text" 
                                class="form-control"
                                placeholder="نام کاربر"
                                value="{{userData.full_name}}"
                                >
                            </div>
                            <div class="col-12 mb-30">
                                <label for="email">ایمیل کاربر</label>
                                <input id="email" name="email" type="email"
                                class="form-control"
                                placeholder="ایمیل کاربر"
                                value="{{userData.email}}"
                                >
                            </div>

                            <div class="col-12 mb-30">
                                <h5>نقش کاربر</h5>
                                <div class="d-flex flex-column">
                                    <p>
                                        <label class="adomx-radio-2 info">
                                            <input type="radio" name="role" value="1" 
                                            {{#userHasRole 1}}checked{{/userHasRole}}>
                                        <i class="icon"></i>
                                        مدیر سایت
                                    </label>
                                    </p>
                                    <p>
                                        <label class="adomx-radio-2 info">
                                            <input type="radio" name="role" value="2"
                                            {{#userHasRole 2}}checked{{/userHasRole}}>
                                            <i class="icon"></i>
                                            نویسنده
                                        </label>
                                    </p>
                                    <p>
                                        <label class="adomx-radio-2 info">
                                            <input type="radio" name="role" value="3"
                                            {{#userHasRole 3}}checked{{/userHasRole}}>
                                            <i class="icon"></i>
                                            کاربر
                                        </label>
                                    </p>
                                    <p>
                                        <button class="button button-icon-right button-primary" type="submit" name="submit">
                                            <span>ذخیره اطلاعات</span>
                                        </button>
                                    </p>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>