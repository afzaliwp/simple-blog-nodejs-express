<ul>
  {{#each comments}}
    <li class="comment">
      <article class="comment-body">
        <footer class="comment-meta">
          <div class="comment-author">
            <img alt="{{this.name}}" src="{{this.avatar}}" class="" />
            <b class="fn">
              <a href="#" rel="external nofollow" class="url">
                {{this.name}}
              </a>
            </b>
            <span class="says">گفته:</span>
          </div>
          <!-- .comment-author -->

          <div class="comment-metadata">
            <a href="#">
              <time datetime="2018-09-02T12:17:07+00:00">
                {{this.persian_created_at}}
              </time>
            </a>
          </div><!-- .comment-metadata -->

        </footer><!-- .comment-meta -->

        <div class="comment-content">
          <p>{{this.content}}</p>
        </div><!-- .comment-content -->

        <div class="reply">
          <a rel="nofollow" class="comment-reply-link" href="#">پاسخ</a>
        </div>
      </article><!-- .comment-body -->
      {{#if (commentHasChildren this.ID)}}
      {{>comments/list comments=(getCommentChildren this.ID)}}
     {{/if}}
    </li><!-- #comment-## -->
  {{/each}}
</ul>