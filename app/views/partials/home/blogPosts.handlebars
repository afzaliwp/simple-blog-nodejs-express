<div class="col-12 col-lg-8">
{{#each posts}}
  <a href="/p/{{this.slug}}"><img class="rounded mb-lg-5 mb-4" src="/static/assets/img/blog/b1.jpg" alt="card image"/></a>
  <h3 class=""><a href="/p/{{this.slug}}">{{this.title}}</a></h3>
  <div class="meta font-lora my-4">
    <a href="/p/{{this.slug}}">{{this.full_name}}</a>
    <span class="meta-separator"></span>
    <a href="/p/{{this.slug}}">{{this.persian_date}}</a>
  </div>
  <p>{{this.excerpt}}</p>
</div>
{{/each}}
{{>home/pagination}}